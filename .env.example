# Version (this should be autogenerated, someday)
VERSION=0.0.1

# Environment (Can be production, development, or station)
ENVIRONMENT=development

# Database connection
# Can be mysql | postgres | sqlite
DB_CONN=mysql

# Python and mysql container variables
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=meteoreo
MYSQL_USER=meteoreo
MYSQL_PASSWORD=password

# Python and postgres container variables
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DATABASE=meteoreo
POSTGRES_USER=meteoreo
POSTGRES_PASSWORD=password

# Sqlite database file path
SQLITE_DATABASE=meteoreo.db

# Sentry DSN
SENTRY_DSN="https://XXXXXXX.ingest.sentry.io/5989883"

# Notifications config
NOTIFICATION_DRIVER=onesignal

# Send notifications always, or only when there is a change
NOTIFICATE_ALWAYS=false

# Onesignal config
ONESIGNAL_APP_ID=""
ONESIGNAL_REST_API_KEY=""
ONESIGNAL_USER_AUTH_KEY=""

# Frequency (in seconds) to check for station udpates
SCAN_FREQUENCY=1500

# Logging level
LOG_LEVEL=DEBUG

# Mysql container password
MYSQL_ROOT_PASSWORD=root
